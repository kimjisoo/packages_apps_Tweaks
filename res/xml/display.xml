<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/display_category"
    android:layout="@layout/tab"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

         <PreferenceScreen
            android:key="substratum"
            android:layout="@layout/preference_substratum"
            android:title="@string/substratum_category" >
            <intent
                android:action="android.intent.action.MAIN"
                android:targetPackage="projekt.substratum"
                android:targetClass="projekt.substratum.LauncherActivity" />
         </PreferenceScreen>

         <PreferenceScreen
            android:key="nightmode"
            android:layout="@layout/preference_nightmode"
            android:title="@string/nightmode_title" >
            <intent android:action="android.intent.action.MAIN"
                android:targetPackage="com.android.systemui"
                android:targetClass="com.android.systemui.tuner.NightModeFragmentActivity" />
         </PreferenceScreen>

   <PreferenceCategory
        android:key="battery_light_cat"
        android:title="@string/battery_light_category" >

   <com.jisoo.tweaks.preference.SystemSettingSwitchPreference
        android:key="battery_light_enabled"
        android:title="@string/battery_light_enable"
        android:persistent="false"/>

   <com.jisoo.tweaks.preference.SystemSettingSwitchPreference
        android:key="battery_light_pulse"
        android:title="@string/battery_low_pulse_title"
        android:dependency="battery_light_enabled"
        android:persistent="false" />

   </PreferenceCategory>

   <PreferenceCategory
        android:key="blur_cat"
        android:title="@string/blur_category" >

   <com.jisoo.tweaks.preference.SystemSettingSwitchPreference
        android:key="translucent_volume_pref"
        android:title="@string/translucent_volume_pref"
        android:defaultValue="false" />

   <com.jisoo.tweaks.preference.SystemSettingSwitchPreference
        android:key="translucent_header_pref"
        android:title="@string/translucent_header_pref"
        android:defaultValue="false" />

   <com.jisoo.tweaks.preference.SystemSettingSwitchPreference
        android:key="translucent_quick_settings_pref"
        android:title="@string/translucent_quick_settings_pref"
        android:defaultValue="false" />

   <com.jisoo.tweaks.preference.SystemSettingSwitchPreference
        android:key="translucent_notifications_pref"
        android:title="@string/translucent_notifications_pref"
        android:defaultValue="false" />

   <com.jisoo.tweaks.preference.SystemSettingSwitchPreference
        android:key="blurred_recent_app_enabled_pref"
        android:title="@string/blurred_recent_app_enabled_pref"
        android:persistent="false"/>

   <com.jisoo.tweaks.preference.SystemSettingSwitchPreference
        android:key="blurred_status_bar_expanded_enabled_pref"
        android:title="@string/blurred_status_bar_expanded_enabled_pref"
        android:defaultValue="false" />

   </PreferenceCategory>

</PreferenceScreen>
